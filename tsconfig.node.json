{
    "compilerOptions": {
        "composite": true,
        "skipLibCheck": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "target": "ES2020",
        "lib": [
            "ES2020"
        ],
        "rootDir": "electron",
        "outDir": "dist/main",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "electron/**/*",
        "src/types/**/*"
    ]
}